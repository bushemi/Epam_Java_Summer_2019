<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.epam.web.servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MultiTestsServlet</servlet-name>
        <servlet-class>com.epam.web.servlets.MultiTestsServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/tests/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MultiTestsServlet</servlet-name>
        <url-pattern>/tests</url-pattern>
    </servlet-mapping>

</web-app>