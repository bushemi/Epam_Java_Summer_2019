<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                          https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>
        <profile>
            <id>Repo</id>

            <!-- set variable content here -->
            <properties>

                <!-- repo-ip: IP:PORT for the repository -->
                <repoguy-ip>http://repo1.maven.org/maven2</repoguy-ip>
            </properties>

            <!-- download artifacts from this repo -->
            <repositories>
                <repository>
                    <id>Repoguy</id>
                    <name>Repoguy Nexus Public Artifacts</name>
                    <url>http://${repoguy-ip}/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>

            <!-- download plugins from this repo -->
            <pluginRepositories>
                <pluginRepository>
                    <id>Repoguy</id>
                    <name>Repoguy Nexus Public Plugins</name>
                    <url>http://${repoguy-ip}/repository/maven-public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</settings>